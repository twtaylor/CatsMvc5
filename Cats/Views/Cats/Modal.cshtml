@{
    Layout = null;
}

<div id="catsModal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="modalLabel">Create/Edit Cat</h3>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <input type="hidden" value="" id="hdnId" />
                        <label class="col-sm-2 control-label" for="Name">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" placeholder="Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Legs">Legs</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputLegs" placeholder="Legs" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="hasTail">Has Tail</label>
                        <div class="col-sm-10 dropdown" id="tailDropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle" id="dropdownHasTail">
                                Haz tail?
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="hasTail">
                                <li><a class="dropdown-item tailItem" href="#">Has Tail</a></li>
                                <li><a class="dropdown-item tailItem" href="#">No Tail</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="type">Type</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputType" placeholder="type" />
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" id="btnSave">Save</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            </div>
        </div>
    </div>
</div>